<h1>Listing users</h1>

<table>
  <tr>
    <th>Openid url</th>
    <th>Admin</th>
    <th>Invited</th>
    <th>Display name</th>
    <th>Email address</th>
    <th>Conference</th>
  </tr>

<% for user in @users %>
  <tr>
    <td><%=h user.openid_url %></td>
    <td><%=h user.admin %></td>
    <td><%=h user.invited %></td>
    <td><%=h user.display_name %></td>
    <td><%=h user.email_address %></td>
    <td><%=h user.current_conference %></td>
    
    <td><%= link_to 'Show', [:admin,user] %></td>
    <td><%= link_to 'Edit', edit_admin_user_path(user.id) %></td>
    <td><%= link_to 'Destroy', [:admin,user], :confirm => 'Are you sure?',
      :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

