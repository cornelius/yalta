<h1>Submit presentation</h1>

<%= error_messages_for :presentation %>

<%= form_for :presentation,
            :url => { :action => :create } do |f| %>
  <p>
    <b>Author</b><br />
    <%= text_field_tag "author", "", :size => 80 %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title, :size => 80 %>
  </p>

  <p>
    <b>Abstract</b><br />
    <%= f.text_area :abstract, :cols => 80, :rows => 20 %>
  </p>

  <p>
    <b>Speaker Info</b><br />
    <%= text_area_tag "bio", "", :cols => 80, :rows => 10 %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', presentations_path %>
