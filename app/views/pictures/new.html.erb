<%= error_messages_for :picture %>

<%= form_for(:picture, :url => { :action => "create", :person_id => @person_id },
                      :html => { :multipart => true }) do |f| -%>
  <p>
    <label for="picture">Upload A Picture:</label>
    <%= f.file_field :uploaded_data %>
  </p>
  <p>
    <%= submit_tag 'Upload' %>
  </p>
<% end -%>
